<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CalcOfXaml"
             x:Class="CalcOfXaml.MainPage">


  <ContentPage.Resources>
    <ResourceDictionary>
      <!--base style-->
      <Style x:Key="baseCalctext" TargetType="Label">
        <Setter Property="FontSize" Value="48" />
        <Setter Property="HorizontalTextAlignment" Value="Start"/>
        <Setter Property="VerticalTextAlignment"   Value="Start"/>
        <Setter Property="LineBreakMode"   Value="NoWrap"/>
        <Setter Property="TextColor" Value="Black"/>
        
        <!--Base Text Wont remain black?-->
      </Style>
      
      
      <!--Variant Styles-->
      <Style x:Key="Calctext1" TargetType="Label"
      BasedOn="{StaticResource baseCalctext}">
        <Setter Property="TextColor" Value="Purple" />
        <Setter Property="FontAttributes" Value="Bold" />
        

      </Style>
      <Style x:Key="Calctext2" TargetType="Label"
      BasedOn="{StaticResource baseCalctext}">
      <Setter Property="TextColor" Value="Green" />
      <Setter Property="FontAttributes" Value="Italic" />
       

      </Style>
        
      <!--//First Attempt at Style. Was going to go for a incrementing button loop-->
      
